@{
    ViewData["Title"] = "Submit Claim";
}

<div class="submit-page-container">
    @if (ViewBag.Message != null)
    {
        <div id="notification" class="notification">@ViewBag.Message</div>
    }

    <div class="submit-hero">
        <h1 class="submit-title">Submit Your Monthly Claim</h1>
        <p class="submit-subtitle">Fill out the form below to submit your claim</p>
    </div>

    <div class="submit-card">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Lecturer Name</label>
                <input type="text" name="lecturerName" class="form-control" placeholder="Enter your full name" required />
            </div>
            <div class="form-group">
                <label>ID Number</label>
                <input type="text" name="idNumber" class="form-control" placeholder="Enter your ID number" required />
            </div>
            <div class="form-group">
                <label>Hours Worked</label>
                <input type="number" name="hoursWorked" class="form-control" placeholder="e.g. 40" required />
            </div>
            <div class="form-group">
                <label>Hourly Rate</label>
                <input type="number" name="hourlyRate" class="form-control" placeholder="e.g. 350.00" required />
            </div>
            <div class="form-group">
                <label>Month</label>
                <input type="month" name="month" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Notes</label>
                <textarea name="notes" class="form-control" placeholder="Additional notes (optional)"></textarea>
            </div>
            <div class="form-group">
                <label>Upload Supporting Document</label>
                <input type="file" name="document" class="form-control" accept=".pdf,.docx,.xlsx" />
            </div>
            <button type="submit" class="btn-submit">Submit Claim</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        // Animate title and subtitle
        gsap.from(".submit-title", {duration: 1.5, y:-100, opacity:0, ease:"bounce.out"});
        gsap.from(".submit-subtitle", {duration:1.2, y:50, opacity:0, delay:0.3, ease:"power2.out"});

        // Animate form fields sequentially
        gsap.utils.toArray(".form-group").forEach((field, i) => {
            gsap.from(field, {y:50, opacity:0, duration:1, delay:0.6 + i*0.1, ease:"power2.out"});
        });

        // Animate Submit button
        gsap.from(".btn-submit", {scale:0.8, opacity:0, duration:1, delay:1.5, ease:"elastic.out(1,0.5)"});

        // Notification animation
        const notification = document.getElementById("notification");
        if(notification){
            // Show with scale & fade-in
            gsap.fromTo(notification, {opacity:0, scale:0.8}, {opacity:1, scale:1, duration:0.6, ease:"elastic.out(1,0.5)"});

            // Fade out after 3 seconds
            setTimeout(()=>{
                gsap.to(notification, {opacity:0, scale:0.8, duration:1, ease:"power2.inOut"});
            }, 3000);
        }
    </script>
}
